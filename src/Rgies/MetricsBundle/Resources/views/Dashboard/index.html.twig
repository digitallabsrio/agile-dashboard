{% extends "MetricsBundle::layout.html.twig" %}

{% block content -%}
<div class="container" xmlns="http://www.w3.org/1999/html">
    <div class="page-header">
        <h1>Dashboard list</h1>
    </div>        <div>
            <button type="button" class="btn btn-primary" onclick="location.href='{{ path('dashboard_new') }}'">
                <i class="fa fa-plus"></i> Create a new entry
            </button>
        </div><br/>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('dashboard_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.order }}</td>
                <td>                        <a href="{{ path('dashboard_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Edit</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
